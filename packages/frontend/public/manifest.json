{
  "name": "X Bookmarker",
  "short_name": "XBookmarker",
  "description": "X(Twitter)のブックマーク管理アプリケーション",
  "theme_color": "#1D4ED8",
  "background_color": "#FFFFFF",
  "display": "standalone",
  "scope": "/",
  "start_url": "/",
  "orientation": "portrait-primary",
  "categories": ["productivity", "utilities", "social"],
  "lang": "ja",
  "dir": "ltr",
  "icons": [
    {
      "src": "/pwa-192x192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/pwa-512x512.svg", 
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/apple-touch-icon.svg",
      "sizes": "180x180",
      "type": "image/svg+xml",
      "purpose": "apple touch icon"
    },
    {
      "src": "/masked-icon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "新しいブックマーク",
      "short_name": "追加",
      "description": "新しいブックマークを追加",
      "url": "/add",
      "icons": [
        {
          "src": "/pwa-192x192.svg",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "検索",
      "short_name": "検索",
      "description": "ブックマークを検索",
      "url": "/search",
      "icons": [
        {
          "src": "/pwa-192x192.svg",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "ダッシュボード",
      "short_name": "ダッシュボード",
      "description": "メインダッシュボード",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/pwa-192x192.svg",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/mobile-dashboard.jpg",
      "sizes": "390x844",
      "type": "image/jpeg",
      "form_factor": "narrow",
      "label": "ダッシュボード画面"
    },
    {
      "src": "/screenshots/mobile-bookmarks.jpg", 
      "sizes": "390x844",
      "type": "image/jpeg",
      "form_factor": "narrow",
      "label": "ブックマーク一覧画面"
    },
    {
      "src": "/screenshots/desktop-dashboard.jpg",
      "sizes": "1280x720",
      "type": "image/jpeg", 
      "form_factor": "wide",
      "label": "デスクトップ版ダッシュボード"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+xbookmarker",
      "url": "/add?url=%s"
    }
  ]
}