# Application Configuration
NODE_ENV=development
APP_NAME=X Bookmarker
APP_VERSION=1.0.0
APP_PORT=3001
APP_BASE_URL=http://localhost:3001

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_APP_NAME=X Bookmarker
VITE_APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://x_bookmarker:x_bookmarker_dev@localhost:5432/x_bookmarker
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=x_bookmarker
DATABASE_USER=x_bookmarker
DATABASE_PASSWORD=x_bookmarker_dev
DATABASE_SSL=false
DATABASE_POOL_SIZE=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# X API Configuration
X_CLIENT_ID=your_x_client_id_here
X_CLIENT_SECRET=your_x_client_secret_here
X_REDIRECT_URI=http://localhost:3000/auth/x/callback
X_API_BASE_URL=https://api.twitter.com/2
X_SCOPES=tweet.read,users.read,bookmark.read

# X API Rate Limiting (design.md requirements)
X_REQUESTS_PER_WINDOW=75
X_WINDOW_MS=900000
X_RETRY_AFTER_MS=60000

# AI Service Configuration
AI_PROVIDER=openai
AI_API_KEY=your_ai_api_key_here
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.3

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
SESSION_TIMEOUT=3600
OAUTH_ENCRYPTION_KEY=your-oauth-encryption-key-minimum-32-characters

# Server Configuration
PORT=3001
HOST=localhost
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# File Storage Configuration
STORAGE_PROVIDER=local
STORAGE_BASE_PATH=./storage
STORAGE_MAX_FILE_SIZE=10485760
STORAGE_ALLOWED_TYPES=image/jpeg,image/png,image/webp,video/mp4

# AWS S3 Configuration (if using S3)
AWS_REGION=us-east-1
AWS_S3_BUCKET=x-bookmarker-storage
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Monitoring Configuration (design.md compliance)
MONITORING_ENABLED=true
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics
ALERT_WEBHOOK_URL=
ERROR_THRESHOLD=10
RESPONSE_TIME_THRESHOLD=5000

# Email Configuration (for notifications)
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@x-bookmarker.com

# Webhook Configuration (for alerts) - merged with monitoring above
# WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url